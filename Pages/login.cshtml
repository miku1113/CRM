@page
@model CRM.Pages.loginModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Pages/Shared/Login_Layout.cshtml"; // Path to your custom layout
}

<div class="login-container">
    <h1>Login</h1>
    <p>Welcome! Please log in to continue.</p>
    <form method="post" class="login-form">
        <!-- Email Input -->
        <div class="input-group">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="icon">
                    <path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48L48 64zM0 176L0 384c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-208L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z" />
                </svg>
            </span>
            <input type="email" name="email" placeholder="Email" required />
        </div>

        <!-- Password Input -->
        <div class="input-group">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="icon">
                    <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17l0 80c0 13.3 10.7 24 24 24l80 0c13.3 0 24-10.7 24-24l0-40 40 0c13.3 0 24-10.7 24-24l0-40 40 0c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" />
                </svg>
            </span>
            <input type="password" name="password" placeholder="Password" required />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-btn">Log In</button>
        <p>Don't have an account? <a href="/signup" class="signup-link">Sign up</a></p>
    </form>
</div>
