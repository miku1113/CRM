@model CRM.Pages.signupModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Pages/Shared/Login_Layout.cshtml"; // Use your custom layout here
}

<div class="login-container">
    <h1>Sign Up</h1>
    <p>Create an account to get started.</p>
    <form method="post" class="login-form">
        <!-- Full Name Input -->
        <div class="input-group">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" class="icon">
                    <path d="M224 256C288.6 256 336 208.6 336 144C336 79.44 288.6 32 224 32C159.4 32 112 79.44 112 144C112 208.6 159.4 256 224 256zM224 288C141.1 288 0 325.1 0 408V456C0 469.3 10.75 480 24 480H424C437.3 480 448 469.3 448 456V408C448 325.1 306.9 288 224 288z" />
                </svg>
            </span>
            <input type="text" name="fullName" placeholder="Full Name" required="">
        </div>


        <!-- Email Input -->
        <div class="input-group">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="icon">
                    <path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48L48 64zM0 176L0 384c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-208L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"></path>
                </svg>
            </span>
            <input type="email" name="email" placeholder="Email" required="">
        </div>

        <!-- Password Input with Toggle -->
        <div class="input-group">
            <input type="password" id="password" name="password" placeholder="Password" required="">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="icon">
                    <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17l0 80c0 13.3 10.7 24 24 24l80 0c13.3 0 24-10.7 24-24l0-40 40 0c13.3 0 24-10.7 24-24l0-40 40 0c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z"></path>
                </svg>
            </span>
        </div>

        <!-- Confirm Password -->
        <div class="input-group">
            <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirm Password" required="">
            <span class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor" class="icon">
                    <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17l0 80c0 13.3 10.7 24 24 24l80 0c13.3 0 24-10.7 24-24l0-40 40 0c13.3 0 24-10.7 24-24l0-40 40 0c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z"></path>
                </svg>
            </span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-btn">Sign Up</button>
        <p>Already have an account? <a href="/login" class="login-link">Log In</a></p>
